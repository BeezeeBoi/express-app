<form action="http://localhost:3000/users/new" method="POST">
  <label for="name">Name:</label>
  <input id="name" type="text" name="name" aria-label="name" required autofocus />
  <br>
  <label for="email">Email:</label>
  <input id="email" type="email" name="email" aria-label="email" required />
  <br>
  <label for="password">Password:</label>
  <input id="password" type="password" name="password" aria-label="password" minlength="8" required />
  <br>
  <button type="submit">Submit</button>
</form>

